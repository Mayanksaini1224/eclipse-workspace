<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" id="WebApp_ID" version="6.0">
  <display-name>MyServlet</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>update.html</welcome-file>
    <welcome-file>update.jsp</welcome-file>
    <welcome-file>update.htm</welcome-file>
  </welcome-file-list>
  
 <servlet>
 <servlet-name>first</servlet-name>
 <servlet-class>com.mayank.MyForm</servlet-class>
 </servlet>
 <servlet-mapping>
<servlet-name>first</servlet-name>
<url-pattern>/submitform</url-pattern>
</servlet-mapping>
 
 <servlet>
 <servlet-name>second</servlet-name>
 <servlet-class>com.mayank.update</servlet-class>
 </servlet>
<servlet-mapping>
<servlet-name>second</servlet-name>
<url-pattern>/updateform</url-pattern>
</servlet-mapping>

<servlet>
 <servlet-name>third</servlet-name>
 <servlet-class>com.mayank.deleteform</servlet-class>
 </servlet>
<servlet-mapping>
<servlet-name>third</servlet-name>
<url-pattern>/deleteform</url-pattern>
</servlet-mapping>

<servlet>
 <servlet-name>fourth</servlet-name>
 <servlet-class>com.mayank.signup</servlet-class>
 </servlet>
<servlet-mapping>
<servlet-name>fourth</servlet-name>
<url-pattern>/signform</url-pattern>
</servlet-mapping>

</web-app>